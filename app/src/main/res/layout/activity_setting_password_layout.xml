<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_sys_admin_pwd"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="@string/set_system_administrator_password"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_security_pwd"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="@string/set_security_password"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
