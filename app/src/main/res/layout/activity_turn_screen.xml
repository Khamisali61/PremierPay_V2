<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/header_layout" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_180">

        <TextView
            android:id="@+id/turn_screen_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:gravity="center" />

        <TextView
            android:id="@+id/turn_screen_text2"
            android:layout_below="@id/turn_screen_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center">

            <Button
                android:id="@+id/cancel_turn_screen"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/drawable_button"
                android:text="@string/card_num_confirm_cancle"
                android:layout_marginEnd="@dimen/dp_15"
                android:focusable="false"/>


            <Button
                android:id="@+id/confirm_turn_screen"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/drawable_button_ok"
                android:text="@string/card_num_confirm_ok"
                android:layout_marginStart="@dimen/dp_15"
                android:focusable="true"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>