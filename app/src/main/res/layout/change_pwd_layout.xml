<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/padding_top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_height">

        <TextView
            android:textSize="@dimen/font_size_"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/padding_right"
        android:layout_marginRight="@dimen/padding_right"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_height">

        <TextView
            android:text="New password:"
            android:layout_weight="1"
            android:id="@+id/tv_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="numberPassword"
            android:background="@drawable/drawable_setting"
            android:layout_weight="4"
            android:id="@+id/et_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/padding_right"
        android:layout_marginRight="@dimen/padding_right"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_height">

        <TextView
            android:text="Retype new password:"
            android:layout_weight="1"
            android:id="@+id/tv_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="numberPassword"
            android:background="@drawable/drawable_setting"
            android:layout_weight="4"
            android:id="@+id/et_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/padding_right"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_marginTop="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_cnacel"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Button>

        <Button
            android:text="Confirm"
            android:id="@+id/bt_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </Button>

    </LinearLayout>


</LinearLayout>
