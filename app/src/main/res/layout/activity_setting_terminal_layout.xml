<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout">

        </include>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_merchant_num"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_num"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_0"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_terminal"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_terminal_num"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_terminal_num"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_1"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_name"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_merchant_name"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_name"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_2"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_location"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_merchant_location"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_location"
                android:gravity="center_vertical|end"
                android:layout_toLeftOf="@id/tv_back_4"
                android:layout_width="@dimen/dp_150"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_4"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_city"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_merchant_city"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_city"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_5"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_state"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_merchant_state"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_state"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_6"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_country"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:text="@string/set_merchant_country"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_country"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_7"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_mcc"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <TextView

                android:text="@string/set_merchant_mcc"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_merchant_mcc"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>
<!--            <ImageView-->
<!--                android:id="@+id/tv_back_8"-->
<!--                android:src="@mipmap/jiantt"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerVertical="true">-->

<!--            </ImageView>-->

        </RelativeLayout>
        <!-- title select mcc  -->
        <LinearLayout
            android:layout_marginTop="@dimen/padding_top"
            android:background="@color/button_edge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/control_ll_height">
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_left"
                android:textSize="@dimen/font_size_grid_hint"
                android:text="@string/set_merchant_mcc"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_merchant_mcc_spinner"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/rl_set_call_ticket_id"
            android:background="@drawable/drawable_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <TextView

                android:text="@string/set_call_ticket_id"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

            </TextView>

            <TextView
                android:id="@+id/tv_call_ticket_id"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/tv_back_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/tv_back_3"
                android:src="@mipmap/jiantt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
