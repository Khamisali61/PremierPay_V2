<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <include layout="@layout/header_layout" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <com.topwise.premierpay.view.SignatureView            android:id="@+id/sv_elec_signe"            android:layout_above="@id/ll_clear"            android:layout_width="match_parent"            android:layout_height="match_parent">        </com.topwise.premierpay.view.SignatureView>        <LinearLayout            android:layout_marginTop="@dimen/dp_10"            android:layout_marginBottom="@dimen/dp_10"            android:layout_alignParentBottom="true"            android:orientation="horizontal"            android:id="@+id/ll_clear"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <Button                android:focusable="false"                android:id="@+id/bt_elec_sign_clear"                android:layout_marginLeft="@dimen/dp_10"                android:layout_marginRight="@dimen/dp_5"                android:text="@string/elec_sign_clear"                android:layout_weight="1"                android:layout_width="0dp"                android:layout_height="match_parent">            </Button>            <Button                android:id="@+id/bt_elec_sign_confirm"                android:layout_marginLeft="@dimen/dp_5"                android:layout_marginRight="@dimen/dp_10"                android:text="@string/elec_sign_confirm"                android:layout_weight="1"                android:layout_width="0dp"                android:layout_height="match_parent">            </Button>        </LinearLayout>    </RelativeLayout></LinearLayout>