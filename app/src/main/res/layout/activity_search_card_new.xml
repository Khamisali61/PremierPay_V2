<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section (Dark Blue with Rounded Bottom) -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_rounded_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white"
        app:tint="@color/white"
        android:padding="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_total_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL AMOUNT"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Amount Wrapper -->
    <RelativeLayout
        android:id="@+id/rl_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_total_amount_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/trad_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Cash Amount (Hidden mostly) -->
    <RelativeLayout
        android:id="@+id/rl_cash_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rl_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/cash_trad_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!-- Manual input PAN, default gone. Kept for logic compatibility. -->
    <RelativeLayout
        android:id="@+id/rl_input_pan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_main_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_bg">

        <EditText
            android:id="@+id/ed_indata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@null"
            android:hint="Please input Pan"
            android:inputType="number"
            android:maxLength="19"
            android:textColor="@color/brand_navy"/>
    </RelativeLayout>

    <!-- Center Content -->
    <ImageView
        android:id="@+id/img_actions"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/anim_list"
        android:contentDescription="Read Card Animation"
        app:layout_constraintTop_toBottomOf="@id/header_bg"
        app:layout_constraintBottom_toTopOf="@id/tv_prompt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap, Insert or Swipe"
        android:textColor="@color/brand_navy"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@id/tv_prompt_readcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_prompt_readcard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hold your card or mobile device near the contactless reader or use the chip slot."
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintBottom_toTopOf="@id/footer_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp">

        <!-- Icons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_visa"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_mc"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/baseline_lock_24"
                app:tint="#999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Securely Processed"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRANDED TERMINAL"
            android:background="@drawable/bg_capsule_gray"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:letterSpacing="0.1"/>

    </LinearLayout>

     <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

     <TextView
        android:id="@+id/header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
