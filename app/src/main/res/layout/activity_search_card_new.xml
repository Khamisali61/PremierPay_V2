<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <include        android:id="@+id/header"        layout="@layout/header_layout"/>    <!--Manul input PAN, default gone-->    <RelativeLayout        android:id="@+id/rl_input_pan"        android:layout_width="match_parent"        android:layout_height="@dimen/dp_55"        android:layout_marginLeft="@dimen/padding_left"        android:layout_marginTop="@dimen/padding_top"        android:layout_marginRight="@dimen/padding_right"        android:background="@drawable/btn_main_background"        android:focusable="true"        android:focusableInTouchMode="true"        android:visibility="gone">        <EditText            android:id="@+id/ed_indata"            android:layout_width="match_parent"            android:layout_height="@dimen/login_num_hight"            android:layout_marginLeft="@dimen/padding_top"            android:layout_marginRight="@dimen/padding_top"            android:background="@null"            android:hint="Please input Pan"            android:inputType="number"            android:maxLength="19"/>    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:paddingLeft="@dimen/activity_horizontal_margin"        android:paddingTop="@dimen/activity_vertical_margin"        android:paddingRight="@dimen/activity_horizontal_margin"        android:paddingBottom="@dimen/activity_vertical_margin">        <!--Amount-->        <RelativeLayout            android:id="@+id/rl_amount"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentTop="true"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp">            <TextView                android:id="@+id/trad_amount"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:textSize="25sp"                android:textStyle="bold"                android:textColor="@color/black"                />        </RelativeLayout>        <!--Cash_amount-->        <RelativeLayout            android:id="@+id/rl_cash_amount"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@id/rl_amount"            android:layout_marginLeft="10dp"            android:layout_marginTop="8dp"            android:layout_marginRight="10dp"            android:visibility="gone">            <TextView                android:id="@+id/cash_trad_amount"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:textSize="20sp" />        </RelativeLayout>        <!--Tips-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_below="@id/rl_cash_amount"            android:layout_marginTop="8dp"            android:layout_gravity="center"            android:layout_marginBottom="30dp"            android:orientation="vertical">            <!--RF Tips Image-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:layout_marginTop="@dimen/_22dp"                android:orientation="vertical">                >                <ImageView                    android:id="@+id/img_actions"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:layout_marginTop="10dp"                    android:background="@drawable/anim_list" />                <TextView                    android:id="@+id/tv_prompt_readcard"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:layout_marginTop="@dimen/_22dp"                    android:text="Please Tap/Insert Card"                    android:textSize="@dimen/disp_single_amount_text"                    android:textStyle="bold" />            </LinearLayout>            <LinearLayout                android:orientation="vertical"                android:layout_width="match_parent"                android:layout_marginTop="@dimen/_30dp"                android:layout_gravity="center"                android:layout_height="wrap_content"                 >                <LinearLayout                    android:orientation="horizontal"                    android:layout_width="wrap_content"                    android:layout_gravity="center"                    android:layout_height="80dp">                    <TextView                        android:text="Visa"                        android:drawableTop="@mipmap/icon_visa"                        android:textAlignment="center"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginRight="@dimen/_3dp">                    </TextView>                    <TextView                        android:text="MC"                        android:drawableTop="@mipmap/icon_mc"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:textAlignment="center"                        android:layout_marginRight="@dimen/_3dp">                    </TextView>                    <TextView                        android:text="UPI"                        android:drawableTop="@mipmap/icon_upi"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:textAlignment="center">                    </TextView>                    <TextView                        android:text="DC"                        android:drawableTop="@mipmap/icon_discover"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:textAlignment="center"                        android:layout_marginRight="@dimen/_3dp">                    </TextView>                    <TextView                        android:text="Amex"                        android:drawableTop="@mipmap/icon_amex_01"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:textAlignment="center"                        android:layout_marginRight="@dimen/_3dp">                    </TextView>                    <TextView                        android:text="JCB"                        android:drawableTop="@mipmap/icon_jcb"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:textAlignment="center"                        android:layout_marginRight="@dimen/_3dp">                    </TextView>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </RelativeLayout></LinearLayout>