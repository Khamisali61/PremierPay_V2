<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="1dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_amount_consume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center_vertical"
                    android:text="@string/amount_input"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:text="2.50"
                    android:textColor="@color/text_gray"
                    android:textSize="24sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5dip"
                    android:text="+4.00"
                    android:textColor="@color/text_gray"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_third"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="2dip"
                    android:text="+10.00"
                    android:textColor="#999999"
                    android:textSize="24sp" />

                <!--android:layout_marginTop="2dip"-->
                <TextView
                    android:hint="@string/amount_input"
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:text="ï¼16.50"
                    android:textColor="#333333"
                    android:textSize="32sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/keyboard_func"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/div_line_color"
                    android:paddingTop="0.5dp">

                    <Button
                        android:id="@+id/btn_clear"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/cccc" />

                    <Button
                        android:id="@+id/btn_add"
                        style="@style/btn_input_amt"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dip"
                        android:background="@mipmap/add"
                 />

                    <Button
                        android:id="@+id/btn_min"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/minus" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyboard_123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/div_line_color"
                    android:paddingTop="0.5dp">

                    <Button
                        android:id="@+id/btn1"
                        android:background="@mipmap/one"
                        style="@style/btn_input_amt" />

                    <Button
                        android:id="@+id/btn2"
                        style="@style/btn_input_amt"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dip"
                        android:background="@mipmap/two"/>

                    <Button
                        android:id="@+id/btn3"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/three"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyboard_456"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/div_line_color"
                    android:paddingTop="0.5dp">

                    <Button
                        android:id="@+id/btn4"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/four"/>

                    <Button
                        android:id="@+id/btn5"
                        style="@style/btn_input_amt"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dip"
                        android:background="@mipmap/five" />

                    <Button
                        android:id="@+id/btn6"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/six"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyboard_789"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/div_line_color"
                    android:paddingTop="0.5dp">

                    <Button
                        android:id="@+id/btn7"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/seven" />

                    <Button
                        android:id="@+id/btn8"
                        style="@style/btn_input_amt"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dip"
                        android:background="@mipmap/eight"/>

                    <Button
                        android:id="@+id/btn9"
                        style="@style/btn_input_amt"
                        android:background="@mipmap/nane"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyboard_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/div_line_color"
                    android:paddingTop="0.5dp">
                    <Button
                        android:id="@+id/btn_point"
                        style="@style/btn_input_amt"

                        android:gravity="center"
                        android:background="@mipmap/dot" />
                    <Button
                        android:id="@+id/btn0"
                        style="@style/btn_input_amt"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dip"
                        android:gravity="center"
                        android:background="@mipmap/zero"
                        />
                    <Button
                        android:id="@+id/btnequal"
                        style="@style/btn_input_amt"

                        android:gravity="center"
                        android:background="@mipmap/equal"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/btn_num_width"
                android:layout_height="match_parent"
                android:background="@color/div_line_color"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_del"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_num_height"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dip"
                    android:background="@color/num_keyboard_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/k_delete"
                        android:clickable="false"
                        android:duplicateParentState="true"
                      />
                </LinearLayout>

                <Button
                    android:background="@mipmap/ride"
                    android:id="@+id/btn_mul"
                    android:layout_width="@dimen/btn_num_width"
                    android:layout_height="@dimen/btn_num_height"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dip"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/btn_div"
                    android:layout_width="@dimen/btn_num_width"
                    android:layout_height="@dimen/btn_num_height"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dip"
                    android:gravity="center"
                    android:background="@mipmap/divide" />


<!--                <Button-->
<!--                    android:id="@+id/btn_scanpay"-->
<!--                    android:layout_width="@dimen/btn_num_width"-->
<!--                    android:layout_height="@dimen/btn_num_height"-->
<!--                    android:layout_marginLeft="0.5dp"-->
<!--                    android:layout_marginTop="0.5dip"-->

<!--                    android:gravity="center"-->
<!--                    android:background="@drawable/scanpay" />-->
<!--                <Button-->
<!--                    android:id="@+id/btn_unionpay"-->
<!--                    android:layout_width="@dimen/btn_num_width"-->
<!--                    android:layout_height="@dimen/btn_num_2height"-->
<!--                    android:layout_marginLeft="0.5dp"-->
<!--                    android:layout_marginTop="0.5dip"-->
<!--                    android:background="@color/flow_background_edg"-->
<!--                    android:gravity="center" />-->

                <Button

                    android:id="@+id/button_ok"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/confirm_font_size_"
                    android:text="OK"
                    android:background="@color/text_pay_type_color"
                    android:gravity="center"
                    android:orientation="vertical">


                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>