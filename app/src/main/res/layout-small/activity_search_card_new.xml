<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section (Dark Blue with Rounded Bottom) -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_header_rounded_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white"
        app:tint="@color/white"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Manual input PAN, default gone. Kept for logic compatibility. -->
    <RelativeLayout
        android:id="@+id/rl_input_pan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_main_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_bg">

        <EditText
            android:id="@+id/ed_indata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@null"
            android:hint="Pan"
            android:textSize="12sp"
            android:inputType="number"
            android:maxLength="19"
            android:textColor="@color/brand_navy"/>
    </RelativeLayout>

    <!-- Center Content -->
    <ImageView
        android:id="@+id/img_actions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/anim_list"
        android:contentDescription="Read Card Animation"
        app:layout_constraintTop_toBottomOf="@id/header_bg"
        app:layout_constraintBottom_toTopOf="@id/tv_prompt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap, Insert or Swipe"
        android:textColor="@color/brand_navy"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@id/tv_prompt_readcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_prompt_readcard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hold your card/device near the reader."
        android:textColor="#666666"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/footer_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_visa"
                android:layout_marginEnd="12dp"
                android:scaleType="fitCenter"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_mc"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/baseline_lock_24"
                app:tint="#999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Securely Processed"
                android:textColor="#999999"
                android:textSize="10sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRANDED TERMINAL"
            android:background="@drawable/bg_capsule_gray"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textSize="8sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:letterSpacing="0.1"/>

    </LinearLayout>

     <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

     <TextView
        android:id="@+id/header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
