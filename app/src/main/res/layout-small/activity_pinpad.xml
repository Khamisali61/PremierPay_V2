<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_card_confirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/input_amount_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_input_pin"
            android:textColor="@color/brand_navy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastPwdWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/brand_navy"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.topwise.premierpay.view.PasswordView
            android:id="@+id/passwordView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:password_box_hasInput_backgroundDrawable="@drawable/style2_has_input"
            app:password_box_highLight_backgroundDrawable="@drawable/style2_high_light"
            app:password_box_notInput_backgroundDrawable="@drawable/style2_not_input"
            app:password_box_setNumber="4"
            app:password_enableHighLight="true" />

        <TextView
            android:id="@+id/trad_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/pin_tip_amount"
            android:textColor="@color/text_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trad_cash_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/pin_tip_amount"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/pin_tip_card_num"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Buttons Section (Horizontal for small screen to save space) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_pin_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_button_outline_navy"
            android:text="@string/amount_input_cancle"
            android:textColor="@color/brand_navy"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pin_clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_button_navy_rounded"
            android:text="@string/elec_sign_clear"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

         <Button
            android:id="@+id/btn_pin_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_lime_rounded"
            android:text="@string/elec_sign_confirm"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
